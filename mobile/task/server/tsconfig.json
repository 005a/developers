{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "moduleResolution": "node",
        "paths": {
            "@cuid/common": ["src/common"],
            "@cuid/entities": ["src/entities"],
            "@cuid/entity-modules": ["src/entity-modules"]
        }
    }
}
